<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.unskilled.foodr.NewMealActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nieuwe maaltijd"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/txt_new_meal_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Naam maaltijd" />

            <EditText
                android:id="@+id/txt_new_meal_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Korte beschrijving" />

            <EditText
                android:id="@+id/txt_new_meal_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Prijs per persoon bv. 7.99" />

            <EditText
                android:id="@+id/txt_new_meal_total_guest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Max aantal gasten"
                android:inputType="number" />

            <EditText
                android:id="@+id/txt_new_meal_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Plaats" />

            <EditText
                android:id="@+id/txt_new_meal_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="URL van plaatje" />

            <EditText
                android:id="@+id/txt_new_meal_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Datum bv. 2018-02-01"
                android:inputType="date" />

            <EditText
                android:id="@+id/txt_new_meal_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tijd bv. 18:15:00"
                android:inputType="time" />


            <Button
                android:id="@+id/btn_new_meal_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="aanmaken" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>
